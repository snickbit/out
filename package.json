{
	"name": "@snickbit/out",
	"version": "2.0.36",
	"description": "Cross-platform pretty output for your terminal or browser console.",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"docs": "typedoc",
		"meta": "pnpm run prod --metafile",
		"prod": "pnpm run build --minify",
		"start": "node ./examples/node.js",
		"test": "jest",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/ansi": "latest",
		"@snickbit/cycle": "^0.0.28",
		"@snickbit/utilities": "^3.1.0",
		"ansi-styles-template": "^1.0.0",
		"browser-or-node": "^2.0.0",
		"node-inspect-extracted": "^1.1.0",
		"picomatch-browser": "^2.2.6"
	},
	"devDependencies": {
		"@types/jest": "^28.1.3",
		"@types/node": "^18.0.0",
		"jest": "^28.1.1",
		"shx": "^0.3.4",
		"ts-jest": "^28.0.5",
		"tsup": "^6.1.2",
		"typedoc": "^0.22.17",
		"typedoc-plugin-markdown": "^3.12.1",
		"typedoc-plugin-no-inherit": "^1.3.1",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
